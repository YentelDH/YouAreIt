<div class="u-container">
	<div class="o-container">
		<div class="o-preparation-card">

			<div class="m-preparation-header">
				<h2 class="a-preparation-header__title">Aanwezige spelers</h2>
				<p class="a-preparation-header__text">Wacht tot {{moderator}} het spel start.</p>
			</div>

			<ul class="o-preparation-players">
				{{#each players}}
					<li class="o-container-player" tabindex="-1">
						<div class="m-player-frame">
							<img src="../assets/images/example.jpg" alt="avatar" class="a-player-picture">
						</div>
						<div class="m-player-info">
							<p class="a-player-name">{{name}}</p>
							<p class="a-player-code">#{{code}}</p>
						</div>
					</li>
				{{/each}}
			</ul>
		</div>

			<a href="/settingsplayer" class="m-button-rectangle color left" data-navigo>
				{{> arrow-left }} Terug
			</a>

	</div>
</div>